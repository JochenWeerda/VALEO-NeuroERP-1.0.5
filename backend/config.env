# ValeoFlow Enterprise Configuration
# Database Configuration
DATABASE_URL=postgresql://valeoflow:password@localhost:5432/valeoflow
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production-2025
REFRESH_SECRET_KEY=your-refresh-secret-key-change-in-production-2025
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "https://valeoflow.com"]
CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_WINDOW=3600

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true

# Logging
LOG_FORMAT=json
LOG_FILE=logs/valeoflow.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Performance
ENABLE_CACHING=true
CACHE_TTL=3600
QUERY_TIMEOUT=30

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# SSL/TLS
SSL_ENABLED=false
SSL_CERT_FILE=
SSL_KEY_FILE=

# External Services
SUPABASE_URL=
SUPABASE_KEY=
LANGGRAPH_URL=
N8N_URL=

# Development
ENVIRONMENT=development 