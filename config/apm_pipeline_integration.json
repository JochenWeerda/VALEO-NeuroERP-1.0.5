{
    "pipeline_integration": {
        "enabled": true,
        "version": "1.0.1",
        "description": "Konfiguration für die Integration der Pipelines mit dem APM-Framework"
    },
    "pipelines": {
        "edge_validation": {
            "enabled": true,
            "integration_points": [
                "post_van",
                "post_plan"
            ],
            "description": "Validiert das Edge-System unter verschiedenen Netzwerkbedingungen",
            "priority": "high"
        },
        "conflict_analysis": {
            "enabled": true,
            "integration_points": [
                "post_van",
                "post_implement"
            ],
            "description": "Identifiziert und analysiert Konfliktszenarien bei parallelen Edge-Zugriffen",
            "priority": "medium"
        },
        "edge_refactoring": {
            "enabled": true,
            "integration_points": [
                "post_plan",
                "post_implement"
            ],
            "description": "Analysiert und verbessert die Edge-Komponenten des Systems",
            "priority": "medium"
        },
        "metrics_definition": {
            "enabled": true,
            "integration_points": [
                "post_van",
                "post_verify"
            ],
            "description": "Definiert und validiert Metriken für Edge-Komponenten",
            "priority": "low"
        },
        "mutation_aggregator": {
            "enabled": true,
            "integration_points": [
                "post_implement",
                "post_verify"
            ],
            "description": "Aggregiert und verarbeitet Mutationen von Edge-Geräten",
            "priority": "high"
        }
    },
    "global_settings": {
        "logging": {
            "level": "INFO",
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
            "file": "logs/pipeline_integration.log"
        },
        "reporting": {
            "enabled": true,
            "format": "json",
            "output_dir": "data/reports/pipeline_results"
        },
        "execution": {
            "parallel": false,
            "timeout": 3600,
            "retry_count": 3,
            "retry_delay": 60
        }
    },
    "apm_phases": {
        "van": {
            "description": "Verstehen und Analysieren",
            "post_phase_pipelines": [
                "edge_validation",
                "conflict_analysis",
                "metrics_definition"
            ]
        },
        "plan": {
            "description": "Planen",
            "post_phase_pipelines": [
                "edge_validation",
                "edge_refactoring"
            ]
        },
        "implement": {
            "description": "Implementieren",
            "post_phase_pipelines": [
                "conflict_analysis",
                "edge_refactoring",
                "mutation_aggregator"
            ]
        },
        "verify": {
            "description": "Verifizieren",
            "post_phase_pipelines": [
                "metrics_definition",
                "mutation_aggregator"
            ]
        }
    }
}