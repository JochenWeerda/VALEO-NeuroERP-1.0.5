# VALEO NeuroERP - Produktions-Umgebungsvariablen
# ================================================

# Datenbank-Konfiguration
POSTGRES_PASSWORD=YourSecurePassword123!
POSTGRES_DB=valeo_neuroerp
POSTGRES_USER=valeo_user

# Redis-Konfiguration
REDIS_PASSWORD=YourRedisPassword456!

# Grafana-Konfiguration
GRAFANA_PASSWORD=YourGrafanaPassword789!

# Backend-Konfiguration
ENVIRONMENT=production
LOG_LEVEL=INFO
CORS_ORIGINS=https://valeo-neuroerp.com,https://www.valeo-neuroerp.com

# Frontend-Konfiguration
NODE_ENV=production
REACT_APP_API_URL=https://api.valeo-neuroerp.com
REACT_APP_ENVIRONMENT=production

# SSL-Zertifikate (Pfade)
SSL_CERT_PATH=/etc/nginx/ssl/valeo-neuroerp.crt
SSL_KEY_PATH=/etc/nginx/ssl/valeo-neuroerp.key

# Backup-Konfiguration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Monitoring-Konfiguration
PROMETHEUS_RETENTION_DAYS=30
GRAFANA_ADMIN_EMAIL=admin@valeo-neuroerp.com 