# CRM Microservice Environment Configuration
# ValeoFlow Enterprise - Token-optimierte Kundenverwaltung

# Server Configuration
CRM_PORT=3001
NODE_ENV=development

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/crm-service.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/valeoflow_crm
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Monitoring
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# API Gateway Communication
API_GATEWAY_URL=http://localhost:3000
SERVICE_DISCOVERY_URL=http://localhost:8080

# Business Logic
CUSTOMER_CACHE_TTL=1800
SEARCH_RESULTS_LIMIT=50
PAGINATION_DEFAULT_LIMIT=10
PAGINATION_MAX_LIMIT=100

# File Upload (if needed)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/customers

# External Services (if needed)
EMAIL_SERVICE_URL=http://localhost:3002
SMS_SERVICE_URL=http://localhost:3003

# Development
DEBUG=false
ENABLE_SWAGGER=true
SWAGGER_PATH=/api-docs 