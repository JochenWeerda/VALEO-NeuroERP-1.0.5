# ValeoFlow Enterprise API Gateway Configuration
# Token-optimiert f√ºr Enterprise-Umgebung

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Database Configuration
DATABASE_URL=postgresql://valeoflow:password@localhost:5432/valeoflow_enterprise
REDIS_URL=redis://localhost:6379

# Microservices Configuration
CRM_SERVICE_URL=http://localhost:3001
FINANCE_SERVICE_URL=http://localhost:3002
INVENTORY_SERVICE_URL=http://localhost:3003
USER_SERVICE_URL=http://localhost:3004
REPORTING_SERVICE_URL=http://localhost:3005

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SLOW_DOWN_DELAY_MS=500

# Monitoring & Metrics
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production

# Logging
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=5242880
LOG_MAX_FILES=5

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000

# Health Check
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# API Documentation
SWAGGER_TITLE=ValeoFlow Enterprise API
SWAGGER_DESCRIPTION=SAP Fiori Style ERP Gateway
SWAGGER_VERSION=1.0.0 